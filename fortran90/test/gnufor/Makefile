# ***********************************************************************
f90comp=gfortran
# ***********************************************************************
test.out: gnufor2.o test.o
	$(f90comp) test.o gnufor2.o -o test.out
gnufor2.o:  gnufor2.f90
	$(f90comp) -c gnufor2.f90
test.o:  test.f90
	$(f90comp) -c test.f90
# ***********************************************************************
clean:
	rm *.out *.o *.mod
# ***********************************************************************
run: 
	./test.out
# ***********************************************************************